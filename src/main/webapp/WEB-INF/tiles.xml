<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	
	<definition name="mainapp" template="/WEB-INF/mainLayouts/mainTemplate.jsp">
	    <put-attribute name="footer" value="/WEB-INF/mainLayouts/footer.jsp" />
	    <put-attribute name="hero" value="/WEB-INF/mainLayouts/hero.jsp" />
	    <put-attribute name="nav" value="/WEB-INF/mainLayouts/nav.jsp" />
	    <put-attribute name="body" value="/WEB-INF/mainLayouts/product.jsp" />	    
	</definition>
	
	<definition name="WILDCARD:*/*" extends="mainapp">
	  	<put-attribute name="body" value="/WEB-INF/view/{1}/{2}.jsp" />
	</definition>
	
	<definition name="logapp" template="/WEB-INF/loginLayouts/log.html">
    
  </definition>
	<definition name="WILDCARD:login/*" extends="logapp">
		<put-attribute name="login" value="/WEB-INF/view/login/{1}.jsp"></put-attribute>
  </definition>
	
</tiles-definitions>